<%- include('./partials/header.ejs') %>

<div class="main">
    <div class="left">
        <h1>Add Student Detail</h1>
        <form method="post">
            <div>
                <label for="name">Name</label>
                <input type="text" name="name" id="name">
            </div>
            <div>
                <label for="age">age</label>
                <input type="text" name="age" id="age">
            </div>
            <div>
                <label for="fees">Fees</label>
                <input type="text" name="fees" id="fees">
            </div>
            <button> Submit </button>
        </form>
    </div>

    <div class="right">
        <h1>List of Student</h1>
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Fees</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody> 
                <% var i=1 %>
                <% data.forEach((item) =>{ %>
                    <tr>
                        <td><%= i++ %></td>
                        <td><%= item.name%></td>
                        <td><%= item.age%></td>
                        <td><%= item.fees%></td>
                        <td><form action="/student/edit/<%= item._id%>" method="get">
                            <button>Edit</button>
                        </form>
                        <form action="/student/delete/<%= item._id%>" method="post">
                            <button>Delete</button></td>
                    </tr>
               <% }) %>
                
            </tbody>
        </table>
    </div>
</div>

<%- include('./partials/footer.ejs') %>